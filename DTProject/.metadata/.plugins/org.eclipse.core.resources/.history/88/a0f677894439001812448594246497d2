<%@include file="template\header.jsp"%>

    <sql:setDataSource
        var="myDS"
        driver="org.h2.Driver"
        url="jdbc:h2:tcp://localhost/~/SassyClassy"
        user="sa" password=""
    />
    
    <sql:query var="listProducts"   dataSource="${myDS}">
        SELECT * FROM Product;
    </sql:query>
    
        <div align="center">
        <table border="1" cellpadding="5px" cellspacing="5px">
            <caption><h2>List of Products</h2></caption>
            <tr>
                <th>Images</th>
                <th>ProductID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
            <c:forEach var="user" items="${listProducts.rows}">
                <tr>
                    <td><c:out value="${user.productId}" /></td>
                    <td><c:out value="${user.name}" /></td>
                    <td><c:out value="${user.price}" /></td>
                </tr>
            </c:forEach>
        </table>
    </div>

  <%@include file="template\footer.jsp"%>

